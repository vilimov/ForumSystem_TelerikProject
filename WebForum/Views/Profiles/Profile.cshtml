@model WebForum.Models.ViewModels.ProfileViewModel
@{
    string userImage = Context.Session.GetString("UserImage");
}


<div class="w3-row-padding">
    <div class="w3-col m12">
        <div class="w3-card w3-round w3-white">
            <div class="w3-container w3-padding">
               <h4 class="w3-center">My Profile</h4>
               <p class="w3-center">
                    <img src="@Url.Content("~/images/avatars/" + userImage)" class="w3-circle" style="height:106px;width:106px" alt="Avatar">
               </p>
               <hr>
               <p class="w3-center"><i class="fa fa-user fa-fw w3-margin-right w3-text-theme"></i>@Model.Username</p>
               <p class="w3-center"><i class="fa fa-id-card fa-fw w3-margin-right w3-text-theme"></i> @Model.FirstName @Model.LastName</p>
               <p class ="w3-center"><i class="fa fa-envelope fa-fw w3-margin-right w3-text-theme"></i>@Model.Email</p>
               <br>
               <a asp-action="EditProfile" class="w3-button w3-theme w3-margin-top w3-round">Edit Profile</a>
        
            </div>
          <br />
        </div>
    </div>
</div>
<br>

@model WebForum.Models.ViewModels.EditProfileViewModel

<div class="w3-row-padding">
	<div class="w3-col m12">
		<div class="w3-card w3-round w3-white">
			<div class="w3-container w3-padding">
				<h3 class="w3-opacity">Edit Profile</h3>
				<hr class="w3-clear">
				@if (ViewData.ModelState[""]?.Errors.Count > 0)
				{
					<div class="w3-panel w3-red w3-display-container">
						<span onclick="this.parentElement.style.display='none'"
							  class="w3-button w3-red w3-large w3-display-topright">&times;</span>
						<h3>Error!</h3>
						<p>@ViewData.ModelState[""].Errors[0].ErrorMessage</p>
					</div>
				}
				<form asp-action="EditProfile" method="post">
					<div>
						<label asp-for="FirstName" class="w3-opacity"></label><br />
						<span asp-validation-for="FirstName" class="form-error" style="color: Red"></span>
						<input asp-for="FirstName" type="text" class="w3-border w3-padding w3-input" /><br />
					</div>

					<div>
						<label asp-for="LastName" class="w3-opacity"></label><br />
						<span asp-validation-for="LastName" class="form-error" style="color: Red"></span>
						<input asp-for="LastName" type="text" class="w3-border w3-padding w3-input" /><br />
					</div>

					<div>
						<label asp-for="Password" class="w3-opacity"></label><br />
						<span asp-validation-for="Password" class="form-error" style="color: Red"></span>
						<input asp-for="Password" type="password" class="w3-border w3-padding w3-input" /><br />
					</div>

					<div>
						<input type="submit" value="Edit Profile" class="w3-button w3-theme w3-margin-top w3-round" />
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

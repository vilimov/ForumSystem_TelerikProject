@model WebForum.Models.ViewModels.ProfileViewModel

<div class="w3-row-padding">
    <div class="w3-col m12">
        <div class="w3-card w3-round w3-white">
            <div class="w3-container w3-padding">
                <h3 class="w3-opacity">Profile</h3>
                <hr class="w3-clear">

                <div>
                    <label>Username:</label><br />
                    <p>@Model.Username</p><br />
                </div>

                <div>
                    <label>First Name:</label><br />
                    <p>@Model.FirstName</p><br />
                </div>

                <div>
                    <label>Last Name:</label><br />
                    <p>@Model.LastName</p><br />
                </div>

                <div>
                    <label>Email:</label><br />
                    <p>@Model.Email</p><br />
                </div>

                <div>
                    <a asp-action="EditProfile" class="w3-button w3-theme w3-margin-top w3-round">Edit Profile</a>
                </div>

            </div>
        </div>
    </div>
</div>
